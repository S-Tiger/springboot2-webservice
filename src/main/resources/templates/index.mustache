    {{>layout/header}} <!--{>}는 현재 머스테치 파일을 기준으로 (index.mustache) 다른 파일을 가져옴-->

    <h1>스프링 부트로 시작하는 웹 서비스 Ver.2</h1>
    <div class="col-md-12">
        <div class ="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                {{#userName}}   <!--머스테치는 if문을 제공하지 않는다 true/false여부만 판단-->
                    Logged in as: <span id="user">{{userName}} ss</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                    <!--/logout 기본적으로 제공되는 스프링 시큐리티 로그아웃 URL 컨트롤러 따로 생성 필요X-->
                {{/userName}}
                {{^userName}}   <!--머스테치에서 해당 값이 존재하지 않는 경우는 ^를 사용-->
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                    <!--/oauth2/authorization/google 기본적으로 제공되는 스프링 시큐리티 로그인 URL 컨트롤러 따로 생성 필요X-->
                {{/userName}}
                {{^userName}}   <!--머스테치에서 해당 값이 존재하지 않는 경우는 ^를 사용-->
                    <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">Naver Login</a>
                    <!--/oauth2/authorization/google 기본적으로 제공되는 스프링 시큐리티 로그인 URL 컨트롤러 따로 생성 필요X-->
                {{/userName}}
            </div>
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">

        {{#posts}} <!--머스테치 문법 posts라는 List를 순회 for문과 동일하다 생각하면 된다-->
            <tr>
                <td>{{id}}</td> <!--List에서 뽑아낸 객체 필드명-->
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>

    {{>layout/footer2}}